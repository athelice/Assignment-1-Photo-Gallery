        </GridView>
        <TextBlock HorizontalAlignment="Left" Margin="555,53,0,0" Text="Image Library" TextWrapping="Wrap" VerticalAlignment="Top" Height="82" Width="350" SelectionChanged="TextBlock_SelectionChanged" FontSize="50" FontWeight="Bold"/>
